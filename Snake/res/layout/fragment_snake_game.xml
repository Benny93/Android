<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="de.volBit.snake.SnakeGameActivity$PlaceholderFragment" >

    <TextView
        android:id="@+id/gameover_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_centerHorizontal="true"
        android:textSize="26sp" />

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@android:color/holo_green_light" >

        <ImageView
            android:id="@+id/snakeHead_view"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="120dp"
            android:src="@drawable/snake_head" />

        <ImageView
            android:id="@+id/cherry_view"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="120dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="80dp"
            android:src="@drawable/cherry" />
        
    </RelativeLayout>

    <Button
        android:id="@+id/right_btn"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/relativeLayout1"
        android:layout_marginRight="15dp"
        android:layout_marginTop="61dp"
        android:background="@drawable/bluebutton_custom"
        android:text="@string/right"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/left_btn"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/right_btn"
        android:layout_alignBottom="@+id/right_btn"
        android:layout_alignLeft="@+id/textView1"
        android:layout_marginLeft="18dp"
        android:background="@drawable/bluebutton_custom"
        android:text="@string/left"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/score_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout1"
        android:layout_centerHorizontal="true"
        android:text="@string/score_string"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>